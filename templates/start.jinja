{%extends 'base.jinja'%}

{%block title%} Comienzo {%endblock%}

{%block content%}
<br><br><br><br><br>
{%if error_msg%}
<div role="alert" class="alert alert-error">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>
  <span>{{error_msg}}</span>
</div>
{%endif%}
<br>
<form action="{{url_for('start')}}" class="w-full max-w-lg mx-auto bg-gray-800 shadow-lg shadow-green-500 p-4 rounded" method="post">
    <h2 class="text-xl text-center"><strong>Usuario Administrador</strong></h2>
    <br>
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-white-500 text-xs font-bold mb-2" for="grid-password">
                Password
            </label>
            <input
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-password" name="passwd" type="password" placeholder="******************">
        </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-white-500 text-xs font-bold mb-2" for="grid-password">
                Confirm Password
            </label>
            <input
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                id="grid-password" name="passwd_confirm" type="password" placeholder="******************">
        </div>
    </div>
    <br>
    <button type="submit" class="btn btn-block btn-success">Comenzar</button>
</form>

{%endblock%}